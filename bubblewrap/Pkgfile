name=bubblewrap
version=0.2.0
release=3
source=(.watch post-install https://github.com/projectatomic/$name/archive/v$version/$name-$version.tar.gz)

build() {
	cd */
	./autogen.sh --prefix=/usr
	make install DESTDIR=$PKG
}
