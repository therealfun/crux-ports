# Description: NSS module for mDNS hostname resolution
# URL:         https://github.com/lathiat/nss-mdns
# Maintainer:  fun, just.the.real.fun at gmail dot com

name=nss-mdns-no-avahi
version=0.14.1
release=1
source=(https://github.com/lathiat/nss-mdns/releases/download/v$version/nss-mdns-$version.tar.gz .watch)

build() {
	cd */
	./configure --prefix=/usr --enable-legacy --disable-avahi
	make install DESTDIR=$PKG
}
