# Description:  Linux audit userspace.
# URL:          https://github.com/linux-audit/audit-userspace
# Maintainer:   fun, just.the.real.fun at gmail dot com
# Depends on:   python3 swig

name=libaudit
version=2.8.3
release=1

source=(.watch https://github.com/linux-audit/audit-userspace/archive/v$version/$name-$version.tar.gz)

build() {
	cd */
	ed -s init.d/Makefile.am <<-EOF
		g/^initdir/s@/init.d@@
		w
	EOF
	./autogen.sh
	opts=(
		--prefix=/usr --sysconfdir=/etc
		--disable-zos-remote            # don't depend on openldap
		--without-python                # avoid footprint mismatches with py2.7
		--enable-silent-rules           # kernel style
	)
	./configure "${opts[@]}"
	make install DESTDIR=$PKG
}
